<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="stylesheets/index.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
      <% messages.forEach(function(message) { %>
      <li>
        <p>User: <%= message.user %></p>
        <p>Message: <%= message.message %></p>
        <p>Date: <%= message.createdAtFormatted %></p>
      </li>
      <% }); %>
    </ul>

    <a href="/new">Add a New Message</a>
  </body>
</html>
